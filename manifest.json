{
  "manifest_version": 2,
  "name": "Download media",
  "version": "1.3",
  "description": "Download media using the context menu",
  "icons": {
    "128": "icons/icon-128.png",
    "64": "icons/icon-64.png",
    "48": "icons/icon-48.png"
  },
  "background": {
    "scripts": [
      "background/buildMenu.js",
      "background/downloadMedia.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/getMedia.js"]
    }
  ],
  "permissions": [
    "downloads",
    "menus",
    "<all_urls>"
  ]
}