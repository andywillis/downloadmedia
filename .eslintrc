{
  "plugins": ["no-unsanitized"],
  "extends": ["plugin:no-unsanitized/DOM", "airbnb-base"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-import-assertions"
      ]
    }
  },
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "browser": true,
    "config": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-plusplus": 0,
    "jsx-a11y/img-has-alt": 0,
    "default-case": 0,
    "func-names": 0,
    "consistent-return": 0,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "no-console": 0,
    "comma-dangle": 0,
    "padded-blocks": 0,
    "prefer-arrow-callback": 0,
    "arrow-body-style": 0,
    "no-shadow": 0,
    "no-param-reassign": 0,
    "no-tabs": 0,
    "arrow-parens": 0,
    "object-curly-newline": 0
  }
}
