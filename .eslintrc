{
  "plugins": ["no-unsanitized"],
  "extends": ["plugin:no-unsanitized/DOM", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "browser": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-plusplus": 0,
    "jsx-a11y/img-has-alt": 0,
    "default-case": 0,
    "func-names": 0,
    "consistent-return": 0,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "no-console": 0,
    "comma-dangle": 0,
    "padded-blocks": 0,
    "prefer-arrow-callback": 0,
    "arrow-body-style": 0,
    "no-shadow": 0,
    "no-param-reassign": 0,
    "no-tabs": 0
  }
}
